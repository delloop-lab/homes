{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "functions": {
    "app/api/*/route.ts": {
      "maxDuration": 30
    },
    "app/api/process-emails/route.ts": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/process-emails",
      "schedule": "*/15 * * * *"
    }
  ],
  "env": {
    "RESEND_API_KEY": "@resend_api_key",
    "FROM_EMAIL": "@from_email",
    "CRON_SECRET": "@cron_secret"
  }
}