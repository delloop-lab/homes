{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "functions": {
    "app/api/*/route.ts": {
      "maxDuration": 30
    },
    "app/api/process-emails/route.ts": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/process-emails",
      "schedule": "0 9 * * *"
    }
  ]
}